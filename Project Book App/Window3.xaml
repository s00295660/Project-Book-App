<Window x:Class="Project_Book_App.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Book_App"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background profile.jpg"/>
        </Grid.Background>
        <Button Content="Back" HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="39" Margin="44,91,0,0" TextWrapping="Wrap" Text="Name : " VerticalAlignment="Top" Width="183" Background="White" FontFamily="Global Serif" FontSize="16"/>
        <Label Content="Wish-List" HorizontalAlignment="Left" Height="30" Margin="601,35,0,0" VerticalAlignment="Top" Width="85" FontSize="18" FontFamily="Global Serif" Background="#FF545454"/>
        <ListBox HorizontalAlignment="Left" Height="274" Margin="502,109,0,0" VerticalAlignment="Top" Width="247" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FF5D5D5D" Opacity="0.9"/>
        <Label Content="Books read :" HorizontalAlignment="Left" Height="33" Margin="44,169,0,0" VerticalAlignment="Top" Width="170" Background="Black" FontSize="18" FontFamily="Mongolian Baiti"/>

    </Grid>
</Window>
